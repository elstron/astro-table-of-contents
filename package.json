{
    "name": "astro-table-of-contents",
    "version": "1.0.15",
    "description": "Toc integration for Astro projects, providing a simple way to generate and display a table of contents for your content. Supports both static and dynamic content.",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "node build.mjs && npm pack && mv *.tgz ../",
        "dev": "node build.mjs && tsc --watch --emitDeclarationOnly",
        "prepublishOnly": "npm run build",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage",
        "test:report": "vitest run --reporter=html",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./component": {
            "types": "./astro/TableOfContents.astro",
            "import": "./astro/TableOfContents.astro",
            "require": "./astro/TableOfContents.astro",
            "default": "./astro/TableOfContents.astro"
        },
        "./middleware": {
            "types": "./dist/middleware/toc-middleware.d.ts",
            "import": "./dist/middleware/toc-middleware.js",
            "require": "./dist/middleware/toc-middleware.js",
            "default": "./dist/middleware/toc-middleware.js"
        }
    },
    "keywords": [
        "astro-component",
        "withastro",
        "toc",
        "table-of-contents",
        "table of contents",
        "toc integration",
        "astro toc",
        "astro table of contents",
        "auto toc",
        "astro-integration"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/elstron/astro-table-of-contents"
    },
    "author": "",
    "license": "MPL-2.0",
    "packageManager": "pnpm@10.12.3",
    "files": [
        "dist/",
        "astro/",
        "README.md",
        "LICENCE"
    ],
    "dependencies": {
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "astro": "^4.0.0 || ^5.0.0"
    },
    "peerDependenciesMeta": {
        "astro": {
            "optional": false
        }
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "@vitest/ui": "3.2.4",
        "astro": "^5.12.8",
        "esbuild": "^0.25.9",
        "prettier": "3.6.2",
        "ttypescript": "^1.5.15",
        "typescript-transform-paths": "^3.5.5",
        "vitest": "^3.2.4"
    }
}
